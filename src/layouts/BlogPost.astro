---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"posts">["data"] & {
	prevPost: { title: string; slug: string } | null;
	nextPost: { title: string; slug: string } | null;
};

const { title, pubDate, updatedDate, prevPost, nextPost } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} />
	</head>

	<body>
		<Header />
		<main class="w-full max-w-full m-0">
			<article>
				<div class="w-full max-w-3xl mx-auto px-4 py-8 text-gray-700">
					<div class="mb-4 py-4 leading-none">
						<div class="text-stone-500">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="italic">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="mt-4!">{title}</h1>
					</div>
					<slot />

					{
						(prevPost || nextPost) && (
							<nav class="mt-12 pt-8 border-t border-stone-300">
								<div class="flex flex-col sm:flex-row justify-between gap-4">
									{prevPost ? (
										<a
											href={`/p/${prevPost.slug}/`}
											class="flex flex-col group no-underline text-inherit"
										>
											<span class="text-sm text-stone-500 mb-1">
												이전 포스트
											</span>
											<span class="text-lg font-semibold group-hover:text-stone-600 transition-colors">
												{prevPost.title}
											</span>
										</a>
									) : (
										<div />
									)}
									{nextPost ? (
										<a
											href={`/p/${nextPost.slug}/`}
											class="flex flex-col group no-underline text-inherit text-right sm:text-left"
										>
											<span class="text-sm text-stone-500 mb-1">
												다음 포스트
											</span>
											<span class="text-lg font-semibold group-hover:text-stone-600 transition-colors">
												{nextPost.title}
											</span>
										</a>
									) : (
										<div />
									)}
								</div>
							</nav>
						)
					}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
